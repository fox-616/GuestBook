@model GuestBook.Models.Book

@{
    ViewData["Title"] = @Model.Title;
    var Manager = Context.Session.GetString("Manager");
    if (Manager != null)
        Layout = "_Layout";
}

<h1>@Html.DisplayFor(model => model.Title)</h1>

<div class="card shadow">
    @if (Model.Photo != null)
    {
        <img src="@Url.Action("GetImage","Books",new{gid=Model.GId})" class="card-img-top" alt="...">
    }
    <div class="card-body">
        <h3 class="card-title"><strong>@Html.DisplayFor(model => model.Title)</strong></h3>
        <p class="card-text">@Html.Raw(Model.Description.ToString().Replace("\r\n", "<br>"))</p>
        <p class="text-end">@Html.DisplayFor(model => model.Author) 於 @Html.DisplayFor(model => model.TimeStamp) 發佈</p>
    </div>
</div>
<hr>

