        //3.5.11 在PostBooks\Display View中撰寫相關的JavaScript程式，以Ajax方式執行新增回覆留言
        function ReCreate() {
            //$('#reForm').serialize();

            $.ajax({
                type: "Post",
                url: `/RePostBooks/Create`,
                data: $('#reForm').serialize(), //將資料序列化後送出
                success: (data) => {

                    //1.清空表單
                    $(`#Description`).val('');
                    $(`#Author`).val('');

                    //2. 關掉 Modal 視窗
                    ReFormModal.hide();

                    //3. 重新讀取回覆留言的資料
                    //重新載入ViewComponent

                    //使用Ajax的方式載入
                    $('#reBookList').load(`/RePostBooks/GetRebookByViewComponent/@(Model.GId)`);
                }
            });
        }




